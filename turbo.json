{
  "$schema": "https://turborepo.org/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "pipeline": {
    "next-app#build": {
      "inputs": ["src/**", "public/**"],
      "outputs": [".next/**", "!.next/cache/**"]
    },

    "api#generate": {
      "inputs": ["src/db/schema.ts"],
      "outputs": ["migrations/**"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "clean": {
      "cache": false
    },
    "//#clean": {
      "cache": false
    }
  }
}
